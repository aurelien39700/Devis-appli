{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto-Sync GitHub",
            "type": "shell",
            "command": "${workspaceFolder}/auto-sync-hybrid.sh",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false,
                "echo": true,
                "focus": false
            },
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}
